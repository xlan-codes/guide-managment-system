{
  "name": "reviews-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "debug": "npm run clean && tsc && npm run swagger",
    "dev": "tsc-watch --onSuccess \"node ./dist/src/index.js\"",
    "dev-sw": "npm run swagger && tsc-watch --onSuccess \"node ./dist/src/index.js\"",
    "start": "./node_modules/.bin/ts-node src/index.ts",
    "start:cluster": "./node_modules/.bin/ts-node src/cluster.ts",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist && rimraf logs",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.ts -t verbose",
    "pretest": "cross-env NODE_ENV=test npm run build && npm run lint",
    "test": "cross-env NODE_ENV=test mocha --exit",
    "test:coverage": "nyc npm run test",
    "swagger": "swaggerGen -c ./swagger.config.json",
    "tsc": "tsc"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.0",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/mocha": "5.2.5",
    "@types/request": "2.48.1",
    "chai": "4.2.0",
    "cross-env": "5.2.0",
    "mocha": "5.2.0",
    "nyc": "^14.1.1",
    "request": "2.87.0",
    "rimraf": "^2.6.3",
    "source-map-support": "0.5.9",
    "ts-node": "^7.0.1",
    "tsc-watch": "^2.4.0",
    "tslint": "5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "3.2.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "report-dir": "./reports/coverage",
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "0.0.36",
    "@types/express-jwt": "0.0.41",
    "@types/helmet": "0.0.43",
    "@types/i18next": "^12.1.0",
    "@types/morgan": "^1.7.36",
    "@types/node": "^11.13.19",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/winston": "^2.4.4",
    "class-transformer": "^0.3.1",
    "class-transformer-validator": "^0.6.0",
    "class-validator": "^0.9.1",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express-jwt": "^5.3.1",
    "fs": "0.0.1-security",
    "helmet": "^3.21.1",
    "i18next": "^15.1.3",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "mssql": "^5.0.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "save": "^2.4.0",
    "typeorm": "^0.2.19",
    "typescript-ioc": "^1.2.5",
    "typescript-rest": "^2.2.2",
    "typescript-rest-swagger": "0.0.23",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.10.0"
  }
}
